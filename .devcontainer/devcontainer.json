{
  "name": "Go Devcontainer",
  "image": "mcr.microsoft.com/devcontainers/go:1.22",
  "customizations": {
    "vscode": {
      "extensions": [
        "golang.go",
        "eamodio.gitlens",
        "vscodevim.vim"
      ],
      "settings": {
        "go.useLanguageServer": true  
      }
    }
  },
  "mounts": [
    "source=${localEnv:HOME}/.ssh,target=/home/vscode/.ssh,type=bind,consistency=cached"
  ]
}